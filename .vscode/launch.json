    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: app.py",
            "type": "python",
            "pythonPath": "/usr/bin/python3",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "program": "app.py",
            "justMyCode": false,
            "args": [
                "--base", "2", 
                "--exponent", "3"
            ],
            "stopOnEntry": false
        }
    ]
}
